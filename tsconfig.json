{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "hello": ["dist/hello"],
      "hello/*": ["dist/hello/*"],
      "@lumen/app-layout": ["dist/lumen/app-layout"],
      "@lumen/app-layout/*": ["dist/lumen/app-layout/*"]
    }
  }
}
